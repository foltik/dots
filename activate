#!/usr/bin/env bash
DOTS=$(dirname $(readlink -f "$0"))
PREFIX=$DOTS/prefix

export PATH_NODOTS=$PATH
export LD_LIBRARY_PATH_NODOTS=$PATH
export XDG_CONFIG_HOME_NODOTS=$XDG_CONFIG_HOME
export XDG_DATA_HOME_NODOTS=$XDG_DATA_HOME
export RUSTUP_HOME_NODOTS=$RUSTUP_HOME
export CARGO_HOME_NODOTS=$CARGO_HOME
export DOTNET_ROOT_NODOTS=$DOTNET_ROOT
export STARSHIP_CONFIG_NODOTS=$STARSHIP_CONFIG
export CODEX_HOME_NODOTS=$CODEX_HOME

export PATH="$PREFIX/bin:$HOME/.cargo/bin:$PATH"
export LD_LIBRARY_PATH="$PREFIX/lib:$LD_LIBRARY_PATH"
export XDG_CONFIG_HOME=$PREFIX/config
export XDG_DATA_HOME=$PREFIX/share
export RUSTUP_HOME=$PREFIX/pkgs/rust/rustup
export CARGO_HOME=$PREFIX/pkgs/rust
export DOTNET_ROOT=$PREFIX/pkgs/dotnet
export STARSHIP_CONFIG=$PREFIX/config/starship.toml
export CODEX_HOME=$PREFIX/codex

exec fish
